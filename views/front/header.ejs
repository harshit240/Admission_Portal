  <!-- <link href="/public/assets/js/bootstrap.bundle.js" rel="stylesheet"> -->
  <script>
    function myFunction() {
        var x = document.getElementById("myInput");
        if (x.type === "password") {
            x.type = "text";
        } else {
            x.type = "password";
        }
    }
</script>
</head>

<body>
  <nav class="navbar navbar-expand-md header fixed-top ps-4 pt-1 p-0">
    <div class="container-fluid p-0">
      <a href="" class="navbar-brand">
        <!--Desktop logo-->
        <a href="/dashboard">
          <img src="/assets/images/logo.png" width="120px" class="desk_logo">
        </a>
        <!--Mobile logo-->
        <a href="/dashboard">
          <img src="/assets/images/logo.png" class="mob_logo" width="120px">
        </a>
      </a>
      <button class="navbar-toggler" data-bs-toggle="collapse" data-bs-target="#pn">
        <span class="navbar-toggler-icon"></span>
      </button>

      <div class="collapse navbar-collapse" id="pn">
        <ul class="navbar-nav ms-auto text-uppercase">
          <li><a href="/dashboard" class="nav-link">Home</a></li>
          <li><a href="/about" class="nav-link">About</a></li>
          <li><a href="/contact" class="nav-link">Contact</a></li>
          <li><a href="/logout" class="nav-link">Logout</a></li>
          <li><a href="#" class="nav-link user" data-bs-toggle="modal" data-bs-target="#add"><%= name %></a></li>
        </ul>
        <img src="<%= image.url %>" width="100px" height="100px" alt="...." class="me-3">
      </div>

    </div>
    <!--container-fluid end -->
  </nav> <!-- Navbar -->

  <form action="/Change_password" method="post" enctype="multipart/form-data">
    <div class="modal fade" id="add" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
              
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel" class="text-center">Change Password</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <div class="mb-3">
                        <label class="form-label">Old Password</label>
                        <input type="password" class="form-control" placeholder="Enter Old password"
                            name="old_password" required>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">New Password</label>
                        <input type="password" class="form-control mb-2" placeholder="Enter New Password"
                            name="new_password" id="myInput" required>
                            <input type="checkbox" onclick="myFunction()" ><span>&nbsp;Show Password</span>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Confirm Password</label>
                        <input type="password" class="form-control" placeholder="Enter Confirm Password"
                            name="confirm_password" required>
                    </div>
                </div>

                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                
                    <button type="submit" class="btn btn-primary">Submit</button>
                  
                  </div>
            </div>
        </div>
    </div>
</form>