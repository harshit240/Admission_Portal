<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Forgot Password</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.2/css/all.min.css"
        integrity="sha512-1sCRPdkRXhBV2PBLUdRb4tMg1w2YPf37qatUFeS7zlBy7jJI8Lf4VHwWfZZfpXtYSLy85pkm9GaYVYMfw5BC1A=="
        crossorigin="anonymous" referrerpolicy="no-referrer" />

    <link rel="icon" href="/assets/images/logo.png">
    
    <!-- Bootstrap core CSS -->
    <link href="/assets/css/bootstrap.min.css" rel="stylesheet">

    <!-- Custom styles for this template -->
    <link href="/assets/css/styles.css" rel="stylesheet">

    <!-- Bootsstrap Link -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css">


    <link href="/public/assets/js/bootstrap.bundle.js" rel="stylesheet">
</head>

<body>
    <!-- <div class="form-gap"></div> -->
    <div class="container">
        <div class="row">
            <div class="col-md-4"></div>
            <div class="col-md-4 col-md-offset-4 mt-5 pt-4">
                <div class="panel panel-default">
                    <div class="panel-body">
                        <div class="text-center">
                            <h3>
                                <i class="fa fa-lock fa-4x" style="color: #393f81;"></i>
                            </h3>
                            <h2 class = "text-center" style="color:#393f81;">Forgot Password?</h2>
                            <p class = "text-danger">You can reset your password here.</p>
                            <div class = "panel-body">
                                <% if(error.length > 0){ %>
                                    <div class="alert alert-danger">
                                        <%= error %>
                                    </div>
                                <% } %>
                                <form id="register-form" class="form" method="post">
                                    <div class="form-group">
                                        <div class="input-group">
                                            <input id="email" name="email" placeholder="Email address"
                                                class="form-control" type="email">
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <input class="btn btn-lg btn-primary btn-block" value="Reset Password"
                                            type="submit" style="background-color: #393f81;">
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-4"></div>
        </div>
    </div>
</body>

</html>