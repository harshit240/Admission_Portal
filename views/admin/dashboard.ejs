<%- include('../front/header.ejs') %>
<div class="container"style="padding-top: 140px!important;" >
    <table class="table table-bordered table-striped">
        <tbody class="text-center">
            <tr>
                <th>S.No.</th>
                <th>Name</th>
                <th>Email</th>
                <th>Course</th>
                <th>Status</th>
                <th>Comments</th>
                <th></th>
                <th>Actions</th>
            </tr>
            <tr>
                <% var i = 1 %>
                <% adata.forEach((t)=>{ %>
                    <tr>
                        <td>
                            <%= i++ %>
                        </td>
                        <td>
                            <%= t.name %>
                        </td>
                        <td>
                            <%= t.email %>
                        </td>
                        <td>
                            <%= t.course %>
                        </td>
                        <% if(t.status==="Accepted") {%>
                            <td><button class="btn btn-success"><%= t.status %></button></td>
                            <%  } else{%>
                              <td><button class="btn btn-danger"><%= t.status %></button></td>
                              <% } %>
                            <!-- Start Form tag from here-->
                            <form action="/admin/update_status/<%= t._id %>" method="POST">

                            
                            <td><textarea name="comment" ></textarea></td>
                            <td>
                              <button name="status" value="Rejected" class="btn btn-danger">Rejected</button>
                              <button name="status" value="Accepted" class="btn btn-success">Accepted</button>
                            </td>
                          </form>
                        <td>
                            <a href="/admin/blog_view/<%= t._id %>" class="btn btn-info btn-sm action-btn"><i class="fa-solid fa-eye"></i></a>
                            <a href="/admin/blog_edit/<%= t._id %>" class="btn btn-info btn-sm action-btn" ><i class="fa-regular fa-pen-to-square"></i></a>
                            <a href="/admin/delete_blog/<%= t._id %>" class="btn btn-info btn-sm action-btn" ><i class="fa-solid fa-trash"></i></a>
                        </td>
                    </tr>
                    <% }) %>
            </tr>
        </tbody>
       
       
    </table>
</div>
<div class="my-4 text-center">
    <a href="/dashboard" class="backdash">Back To The Dashboard</a>
</div>
