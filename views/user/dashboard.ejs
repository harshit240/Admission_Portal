<%- include('../front/header.ejs') %>
    <!-- ======================================= -->
    <!--slider div start-->
    <div class="carousel slide dashpage" data-bs-ride="carousel" id="a">
        <div class="carousel-indicators">
            <button type="button" data-bs-target="#a" data-bs-slide-to="0" class="active"></button>
            <button type="button" data-bs-target="#a" data-bs-slide-to="1"></button>
            <button type="button" data-bs-target="#a" data-bs-slide-to="2"></button>
            <button type="button" data-bs-target="#a" data-bs-slide-to="3"></button>
            <button type="button" data-bs-target="#a" data-bs-slide-to="4"></button>
        </div>

        <div class="carousel-inner">
            <div class="carousel-item active" data-bs-interval="4000">
                <img src="/assets/images/banner1.jpg" class="w-100 " height="400px" alt="...">
            </div>
            <div class="carousel-item" data-bs-interval="2000">
                <img src="/assets/images/banner6.jpg" class="w-100 " height="400px" alt="...">
            </div>
            <div class="carousel-item" data-bs-interval="2000">
                <img src="/assets/images/banner3.jpg" class="w-100 " height="400px" alt="...">
            </div>
            <div class="carousel-item" data-bs-interval="2000">
                <img src="/assets/images/banner4.jpg" class="w-100 " height="400px" alt="...">
            </div>
            <div class="carousel-item" data-bs-interval="2000">
                <img src="/assets/images/banner5.jpg" class="w-100 " height="400px" alt="...">
            </div>
        </div>
        <!--carousel-inner-->

        <button class="carousel-control-prev" type="button" data-bs-target="#a" data-bs-slide="prev">
            <span class="carousel-control-prev-icon"></span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#a" data-bs-slide="next">
            <span class="carousel-control-next-icon"></span>
        </button>
    </div>
    <!--slider div end-->
    <!-- ================================================================ -->

    <div class="container mb-5 text-center">
        <h1 class="course_heading mt-5">Hello <%= name %></h1>
        <h2 class="course_heading my-3">Register Your Course</h2>
        <p class="course_para text-center mb-5">Course Registration means the official recording of a student's name to study a course or courses.</p>
        <div class="row">
            <div class="col-md-4 mb-5">
                <div class="card card1">
                    <img class="card-img-top" height="200px" width="300px" src="/assets/images/card_image1.jpg"
                        alt="Card image cap">
                    <div class="card-body">
                        <h5 class="card-title ">B.Tech</h5>
                        <p class="card-text">B.Tech is a professional undergraduate engineering degree</p>
                        <% if(b) { %>
                            <a href="/course/courseview" class="btn cors">Display</a>
                            <% }else{ %>
                            <a href="/course/btech" class="btn cors">Register</a>
                        <% }%> 
                    </div>
                </div>
            </div>
            <div class="col-md-4 mb-4">
                <div class="card card2">
                    <img class="card-img-top " height="200px!important" width="300px!important" src="/assets/images/card_image2.jpg"
                        alt="Card image cap">
                    <div class="card-body">
                        <h5 class="card-title ">BCA</h5>
                        <p class="card-text">BCA is a three-year Bachelor's Degree in Computer Application </p>
                        <% if(bc) { %>
                            <a href="/course/courseview" class="btn cors">Display</a>
                            <% }else{ %>
                            <a href="/course/bca" class="btn cors">Register</a>
                        <% }%> 
                    </div>
                </div>
            </div>
            <div class="col-md-4 mb-4">
                <div class="card card3">
                    <img class="card-img-top " height="200px" width="300px" src="/assets/images/card_image3.jpg"
                        alt="Card image cap">
                    <div class="card-body">
                        <h5 class="card-title ">MCA</h5>
                        <p class="card-text">MCA is a professional post-graduation degree in computer science</p>
                        <% if(m) { %>
                            <a href="/course/courseview" class="btn cors">Display</a>
                            <% }else{ %>
                            <a href="/course/mca" class="btn cors">Register</a>
                        <% }%>                
                    </div>
                </div>
            </div>
        </div>
    </div>


    <%- include('../front/footer.ejs') %>
