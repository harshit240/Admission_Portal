<%- include('../front/header.ejs') %>



<section id="registration">
    <div class="container">
        <h1 class="text-center pt-5">B.Tech Registration Form</h1>
        <h1 class="text-center text-uppercase pb-2" style="color:#ed5a25;">Do Register!</h1>
        <p class="text-center" style="color: #fff; background-color: #35b9dd;">In Case any query, Kindly Contact: 7974978812</p>
        <div class="row">
            <div class="col-lg-6">
                <!-- Slider Div start -->
                <div class="carousel slide" data-bs-ride="carousel" id="a">

                    <div class="carousel-indicators">
                        <button type="button" data-bs-target="#a" data-bs-slide-to="0" class="active"></button>
                        <button type="button" data-bs-target="#a" data-bs-slide-to="1"></button>
                        <button type="button" data-bs-target="#a" data-bs-slide-to="2"></button>
                    </div>

                    <div class="carousel-inner">
                        <div class="carousel-item active " data-bs-interval="4000">

                            <img src="/assets/images/registration_form1.jpg" width="100%" height="700px" alt="..."
                                style="background-position:center;">
                            <div class="carousel-caption">

                            </div>
                            <!--carousel-caption-->
                        </div>

                        <div class="carousel-item" data-bs-interval="2000">

                            <img src="/assets/images/registration_form2.jpg" width="100%" height="700px" alt="..."
                                style="background-position:center;">
                            <div class="carousel-caption">

                            </div>
                            <!--carousel-caption-->
                        </div>

                        <div class="carousel-item" data-bs-interval="2000">

                            <img src="/assets/images/registration_form3.jpg" width="100%" height="700px" alt="..."
                                style="background-position:center;">
                            <div class="carousel-caption">

                            </div>
                            <!--carousel-caption-->
                        </div>
                    </div>
                    <!--carousel-inner-->

                    <button class="carousel-control-prev" type="button" data-bs-target="#a" data-bs-slide="prev">
                        <span class="carousel-control-prev-icon"></span>
                    </button>
                    <button class="carousel-control-next" type="button" data-bs-target="#a" data-bs-slide="next">
                        <span class="carousel-control-next-icon"></span>
                    </button>
                </div>

            </div><!-- Slider Div end -->

            <div class="col-lg-6" >
                <form action="/register/update/<%= editdata._id %>" method="post" enctype="multipart/form-data">
                    <div class="mb-3 mt-1">
                        <label class="mb-2">Username:</label>
                        <input type="text" name="name" value="<%= editdata.name %>" class="form-control enter_name" placeholder="Enter name" style="border:1px solid #35b9dd">
                    </div>
                    <div class="mb-3">
                        <label class="mb-2">Email:</label>
                        <input type="email" name="email" value="<%= editdata.email %>" class="form-control" placeholder="Enter Email"
                            style="border-radius: 25px; border:1px solid #35b9dd">
                    </div>
                    <div class="mb-3">
                        <label class="mb-2">Mobile No.</label>
                        <input type="number" name="number" value="<%= editdata.number %>" class="form-control" placeholder="Enter Mobile Number"
                            style="border-radius: 25px; border:1px solid #35b9dd">
                    </div>
                    <div class="mb-3">
                        <label class="mb-2">D.O.B:</label>
                        <input type="date" name="dob" value="<%= editdata.dob %>" class="form-control" style="border-radius: 25px; border:1px solid #35b9dd;">
                    </div>
                    <div class="mb-3 ">
                        <label class="mb-2">Gender</label>
                        <br>
                        <input type="radio" name="gender" value="male" <%= editdata.gender=='male'?'checked':'' %>>&nbsp;Male
                        <input type="radio" name="gender" value="female" <%= editdata.gender=='female'?'checked':'' %>>&nbsp;Female
                        <br>
                    </div>
                    <div class="mb-3">
                        <label>Address:</label>
                        <textarea class="form-control" name="address" style="border-radius: 25px; border:1px solid #35b9dd"><%= editdata.address %></textarea>
                    </div>
                    <div class="mb-3">
                        <label>Select College</label>
                        <select class="form-control" name="college" value="<%= editdata.college %>" style="border-radius: 25px; border:1px solid #35b9dd">
                            <option>Select</option>
                            <option <%= editdata.college =='MITS'?'selected':'' %>>MITS</option>
                            <option <%= editdata.college =='RJIT'?'selected':'' %>>RJIT</option>
                            <option <%= editdata.college =='ITM'?'selected':'' %>>ITM</option>
                            <option <%= editdata.college =='NITM'?'selected':'' %>>NITM</option>
                        </select>
                    </div>
                    <div class="mb-3">
                        <label>Course</label>
                        <select class="form-control" name="course" value="<%= editdata.course %>" style="border-radius: 25px; border:1px solid #35b9dd">
                            <option>Select</option>
                            <option <%= editdata.course =='B.TECH'?'selected':'' %>>B.Tech</option>
                            <option <%= editdata.course =='MCA'?'selected':'' %>>MCA</option>
                            <option <%= editdata.course =='BCA'?'selected':'' %>>BCA</option>
                            <option <%= editdata.course =='B.S.C'?'selected':'' %>>B.S.C</option>
                            <option <%= editdata.course =='Other'?'selected':'' %>>Other</option>
                        </select>
                    </div>
                    <div class="mb-3">
                        <label>Branch</label>
                        <select class="form-control" name="branch" value="<%= editdata.branch %>" style="border-radius: 25px; border:1px solid #35b9dd">
                            <option>Select</option>
                            <option <%= editdata.branch =='CSE'?'selected':'' %>>CSE</option>
                            <option <%= editdata.branch =='IT'?'selected':'' %>>IT</option>
                            <option <%= editdata.branch =='EC'?'selected':'' %>>EC</option>
                            <option <%= editdata.branch =='ET'?'selected':'' %>>ET</option>
                            <option <%= editdata.branch =='ME'?'selected':'' %>>ME</option>
                            <option <%= editdata.branch =='EE'?'selected':'' %>>EE</option>
                        </select>
                    </div>
                    <div class="text-center ">
                        <button class="btn my-4" style="background-color: #35b9dd; color:#fff;" type="submit">Submit</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>

<%- include('../front/footer.ejs') %>